@page "/customers"
@using DbModels
@using MyDbModels
@using Providers
@using Services
@using global::DbModels
@using Microsoft.Extensions.Localization
@rendermode InteractiveServer

@inject IMyDbModel_Provider Provider
@inject NavigationManager NavManager
@inject IJSRuntime JSRuntime
@inject IReportService ReportService
@inject IStringLocalizer<App> Loc

<div class="container-fluid">
    <div class="row mb-3 align-items-center">
        <div class="col-md-6">
            <h3>📂 @Loc["CustomerList"]</h3>
        </div>
        <div class="col-md-6 text-end">
            <button class="btn btn-danger me-2" @onclick="DownloadPdf">
                <i class="bi bi-file-earmark-pdf"></i> @Loc["DownloadPdf"]
            </button>

            <button class="btn btn-primary" @onclick="GoToCreate">
                <i class="bi bi-plus-lg"></i> @Loc["NewCustomer"]
            </button>
        </div>
    </div>

    <div class="card p-3 mb-3 shadow-sm border-0">
        <div class="row g-2">
            <div class="col-md-8">
                <div class="input-group">
                    <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                    <input type="text" class="form-control" placeholder="İsim ile ara..."
                           @bind="searchText"
                           @bind:event="oninput"
                           @onkeydown="EnterSearch" />
                    <button class="btn btn-outline-secondary" @onclick="SearchData">Ara</button>
                </div>
            </div>
            <div class="col-md-4">
                <div class="d-flex justify-content-end align-items-center">
                    <label class="me-2 text-muted small">Sayfada:</label>
                    <select class="form-select w-auto" @onchange="OnPageSizeChanged">
                        <option value="5">5 Kayıt</option>
                        <option value="10" selected>10 Kayıt</option>
                        <option value="20">20 Kayıt</option>
                        <option value="50">50 Kayıt</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <div class="table-responsive bg-white shadow-sm rounded">
        <table class="table table-hover table-bordered table-striped align-middle mb-0">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Adı Soyadı</th>
                    <th>E-Posta</th>
                    <th>Telefon</th>
                    <th>Puan</th>
                    <th>Durum</th>
                    <th style="width: 150px;" class="text-center">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (customers == null)
                {
                    <tr><td colspan="7" class="text-center p-4">Yükleniyor...</td></tr>
                }
                else if (!customers.Any())
                {
                    <tr><td colspan="7" class="text-center text-danger p-4">Kayıt bulunamadı.</td></tr>
                }
                else
                {
                    @foreach (var item in customers)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.FullName</td>
                            <td>@item.Email</td>
                            <td>@item.Phone</td>
                            <td><span class="badge bg-info text-dark">@item.LoyaltyPoints Puan</span></td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Pasif</span>
                                }
                            </td>
                            <td class="text-center">
                                <button class="btn btn-sm btn-warning me-1" @onclick="() => EditCustomer(item.Id)"><i class="bi bi-pencil"></i></button>

                                <AuthorizeView Roles="Admin">
                                    <Authorized>
                                        <button class="btn btn-sm btn-danger" @onclick="() => DeleteCustomer(item.Id)">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </Authorized>
                                </AuthorizeView>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    @if (_parameters != null && _parameters.TotalPageCount > 1)
    {
        <div class="d-flex justify-content-between align-items-center mt-3 p-2 bg-white rounded shadow-sm">
            <div class="text-muted small">
                Toplam <strong>@_parameters.TotalRecordCount</strong> kayıt. (Sayfa <strong>@_parameters.PageNumber</strong> / @_parameters.TotalPageCount)
            </div>
            <nav aria-label="Page navigation">
                <ul class="pagination pagination-sm mb-0">
                    <li class="page-item @(_parameters.PageNumber == 1 ? "disabled" : "")">
                        <button class="page-link" @onclick="() => ChangePage(_parameters.PageNumber - 1)"><i class="bi bi-chevron-left"></i></button>
                    </li>
                    @for (int i = 1; i <= _parameters.TotalPageCount; i++)
                    {
                        if (i == 1 || i == _parameters.TotalPageCount || (i >= _parameters.PageNumber - 2 && i <= _parameters.PageNumber + 2))
                        {
                            var pageIndex = i;
                            <li class="page-item @(_parameters.PageNumber == i ? "active" : "")">
                                <button class="page-link" @onclick="() => ChangePage(pageIndex)">@i</button>
                            </li>
                        }
                        else if (i == _parameters.PageNumber - 3 || i == _parameters.PageNumber + 3)
                        {
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                        }
                    }
                    <li class="page-item @(_parameters.PageNumber == _parameters.TotalPageCount ? "disabled" : "")">
                        <button class="page-link" @onclick="() => ChangePage(_parameters.PageNumber + 1)"><i class="bi bi-chevron-right"></i></button>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>

@code {
    private List<Customer> customers;
    private string searchText = "";
    private IMyDbModel_Parameter _parameters = MyDbModel_Parameter.Create(1, 10, "Id DESC");
    private int pageSize = 10;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task EnterSearch(KeyboardEventArgs e) { if (e.Key == "Enter") await SearchData(); }

    private async Task SearchData()
    {
        _parameters = MyDbModel_Parameter.Create(1, pageSize, "Id DESC");
        await LoadData();
    }

    private async Task ChangePage(int page)
    {
        if (page < 1 || page > _parameters.TotalPageCount) return;
        _parameters.PageNumber = page;
        await LoadData();
    }

    private async Task OnPageSizeChanged(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out int newSize))
        {
            pageSize = newSize;
            _parameters = MyDbModel_Parameter.Create(1, pageSize, "Id DESC");
            await LoadData();
        }
    }

    private async Task LoadData()
    {
        var model = new MyDbModel<Customer>();
        model.Parameters = _parameters;
        model.Parameters.Where = new Dictionary<string, string>();
        if (!string.IsNullOrEmpty(searchText)) model.Parameters.Where.Add("FullName", searchText);

        var result = await Provider.Execute(model, "sp_Customer_List", true);
        customers = result.Items.ToList();
        _parameters = result.Parameters;
    }

    private void GoToCreate() => NavManager.NavigateTo("/customers/create");
    private void EditCustomer(int id) => NavManager.NavigateTo($"/customers/edit/{id}");

    private async Task DeleteCustomer(int id)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Silmek istediğinize emin misiniz?"))
        {
            await Provider.Execute<Customer>("sp_Customer_Delete", ("Id", id));
            await LoadData();
        }
    }

    // --- PDF İNDİRME ---
    private async Task DownloadPdf()
    {
        if (customers == null || !customers.Any())
        {
            await JSRuntime.InvokeVoidAsync("alert", "İndirilecek veri yok.");
            return;
        }

        try
        {
            var pdfBytes = ReportService.GenerateCustomerReport(customers);
            using var stream = new MemoryStream(pdfBytes);
            using var streamRef = new DotNetStreamReference(stream);
            await JSRuntime.InvokeVoidAsync("downloadFileFromStream", $"MusteriListesi_{DateTime.Now:yyyyMMdd}.pdf", streamRef);
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Hata oluştu: {ex.Message}");
        }
    }
}