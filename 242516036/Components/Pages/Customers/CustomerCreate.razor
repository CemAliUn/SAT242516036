@page "/customers/create"
@using DbModels
@using Providers
@using MyDbModels
@using global::DbModels
@inject IMyDbModel_Provider Provider
@inject NavigationManager NavManager
@rendermode InteractiveServer

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Yeni Müşteri Kaydı</h4>
                </div>
                <div class="card-body">
                    <EditForm Model="@customer" OnValidSubmit="SaveCustomer" FormName="CustomerCreateForm">
                        <DataAnnotationsValidator />

                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger">@errorMessage</div>
                        }

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Adı</label>
                                <InputText @bind-Value="customer.FirstName" class="form-control" placeholder="Örn: Ahmet" />
                                <ValidationMessage For="@(() => customer.FirstName)" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Soyadı</label>
                                <InputText @bind-Value="customer.LastName" class="form-control" placeholder="Örn: Yılmaz" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">E-Posta Adresi</label>
                                <InputText @bind-Value="customer.Email" class="form-control" type="email" placeholder="ornek@email.com" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Telefon Numarası</label>
                                <InputText @bind-Value="customer.Phone" class="form-control" placeholder="0555..." />
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="button" class="btn btn-secondary me-2" @onclick="GoBack">İptal</button>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save"></i> Kaydet
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    // Formun bağlı olduğu model
    [SupplyParameterFromForm]
    private Customer customer { get; set; } = new Customer();

    private string errorMessage;

    private async Task SaveCustomer()
    {
        try
        {
            // Basit Validasyon (Boş kontrolü)
            if (string.IsNullOrWhiteSpace(customer.FirstName) || string.IsNullOrWhiteSpace(customer.LastName))
            {
                errorMessage = "Ad ve Soyad alanları zorunludur.";
                return;
            }

            // 1. Provider üzerinden SP Çağrısı
            // Parametreleri Tuple (Key, Value) formatında gönderiyoruz.
            // sp_Customer_Create prosedürünün beklediği parametreler: @FirstName, @LastName, @Email, @Phone

            await Provider.Execute<Customer>("sp_Customer_Create",
                ("FirstName", customer.FirstName),
                ("LastName", customer.LastName),
                ("Email", customer.Email ?? ""), // Null ise boş string gönder
                ("Phone", customer.Phone ?? "")
            );

            // 2. Başarılı ise listeye geri dön
            NavManager.NavigateTo("/customers");
        }
        catch (Exception ex)
        {
            errorMessage = $"Hata oluştu: {ex.Message}";
        }
    }

    private void GoBack()
    {
        NavManager.NavigateTo("/customers");
    }
}