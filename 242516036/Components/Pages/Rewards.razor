@page "/rewards"
@using DbModels
@using MyDbModels
@using Providers
@rendermode InteractiveServer
@inject IMyDbModel_Provider Provider
@inject IJSRuntime JSRuntime

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-6">
            <h3 class="fw-bold text-primary"><i class="bi bi-gift-fill"></i> Ödül Kataloğu</h3>
            <p class="text-muted">Müşterilerin puanlarıyla alabileceği hediyeleri buradan yönetin.</p>
        </div>
    </div>

    <div class="card shadow-sm mb-4 border-0">
        <div class="card-header bg-white py-3">
            <h6 class="mb-0 fw-bold"><i class="bi bi-plus-circle"></i> Yeni Ödül Ekle</h6>
        </div>
        <div class="card-body">
            <EditForm Model="newReward" OnValidSubmit="AddReward" FormName="rewardForm">
                <div class="row g-3">
                    <div class="col-md-4">
                        <input type="text" class="form-control" placeholder="Ödül Adı (Örn: Kulaklık)" @bind="newReward.Title" required />
                    </div>
                    <div class="col-md-3">
                        <input type="number" class="form-control" placeholder="Puan Değeri" @bind="newReward.PointsCost" required />
                    </div>
                    <div class="col-md-3">
                        <input type="number" class="form-control" placeholder="Stok Adedi" @bind="newReward.StockQuantity" required />
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-success w-100">Ekle</button>
                    </div>
                </div>
            </EditForm>
        </div>
    </div>

    <div class="row">
        @if (rewardList == null)
        {
            <p class="text-center">Yükleniyor...</p>
        }
        else if (!rewardList.Any())
        {
            <div class="col-12"><div class="alert alert-info">Henüz bir ödül eklenmemiş.</div></div>
        }
        else
        {
            @foreach (var item in rewardList)
            {
                <div class="col-md-4 col-lg-3 mb-4">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body text-center">
                            <div class="mb-3">
                                <i class="bi bi-gift text-warning display-4"></i>
                            </div>
                            <h5 class="card-title fw-bold">@item.Title</h5>
                            <h6 class="text-primary fw-bold">@item.PointsCost Puan</h6>
                            <p class="text-muted small">Stok: @item.StockQuantity Adet</p>
                        </div>
                        <div class="card-footer bg-white border-0 d-flex justify-content-between">
                            <button class="btn btn-sm btn-outline-danger w-100" @onclick="() => DeleteReward(item.Id)">
                                <i class="bi bi-trash"></i> Sil
                            </button>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

@code {
    private List<Reward> rewardList;
    private Reward newReward = new Reward(); // Form için boş model

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        // Provider ile verileri çekiyoruz
        var result = await Provider.GetItems<Reward>("sp_Reward_List");
        rewardList = result?.ToList() ?? new List<Reward>();
    }

    private async Task AddReward()
    {
        try
        {
            // Veritabanına kaydet
            await Provider.Execute<Reward>("sp_Reward_Add",
                ("Title", newReward.Title),
                ("Description", "Standart Açıklama"), // Basit olsun diye sabit geçtik
                ("PointsCost", newReward.PointsCost),
                ("StockQuantity", newReward.StockQuantity)
            );

            // Formu temizle ve listeyi yenile
            newReward = new Reward();
            await LoadData();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", "Hata: " + ex.Message);
        }
    }

    private async Task DeleteReward(int id)
    {
        bool confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Bu ödülü silmek istiyor musunuz?");
        if (confirmed)
        {
            await Provider.Execute<Reward>("sp_Reward_Delete", ("Id", id));
            await LoadData();
        }
    }
}